{
  "name": "swift-dashboard-backend",
  "version": "1.0.0",
  "description": "OpenSearch Dashboard plugin for Swift Dashboard",
  "main": "index.js",
  "scripts": {
    "start:client": "cd client && npm start",
    "start:server": "cd server && npm start",
    "start": "concurrently \"npm run start:server\" \"npm run start:client\"",
    "build:client": "cd client && npm run build",
    "build:server": "cd server && npm run build",
    "build": "npm run build:server && npm run build:client",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "opensearch",
    "dashboard",
    "plugin"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@opensearch-project/opensearch": "^3.4.0",
    "chart.js": "^4.4.8",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "react-chartjs-2": "^5.3.0"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/express": "^5.0.1",
    "@types/node": "^22.13.13",
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.9",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  }
}
